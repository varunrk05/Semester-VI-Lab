	int buffer[100];
	MPI_Buffer_attach()

	if(rank == 0){
		printf("Enter %d elements:", size);
		for(int i = 0; i < size; i++){
			scanf("%d", &a[i]);
		}


	}
	else if(rank % 2 == 0){

	}
	else{

	}

	MPI_Finalize();
	return 0;
}

