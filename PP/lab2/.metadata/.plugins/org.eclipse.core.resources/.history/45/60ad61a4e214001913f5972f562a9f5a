#include "mpi.h"
#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]){
	int rank, size;

	char *s;

	MPI_Init(&argc, &argv);
	MPI_Comm_rank(MPI_COMM_WORLD, &rank);
	MPI_Comm_size(MPI_COMM_WORLD, &size);

	if(rank == 0){
		printf("Enter word:");
		scanf("%s", s);

		int len = sizeof(s);
		MPI_Ssend(s, sizeof(s));
	}

	return 0;
}
