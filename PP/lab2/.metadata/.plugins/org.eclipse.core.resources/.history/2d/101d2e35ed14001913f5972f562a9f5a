#include "mpi.h"
#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]){
	int rank, size;
	MPI_Status status;
	int t1, t2, n;
	int a[20];
	int sum1, sum2;

	MPI_Init(&argc, &argv);
	MPI_Comm_rank(MPI_COMM_WORLD, &rank);
	MPI_Comm_size(MPI_COMM_WORLD, &size);

	if(rank == 0){
		printf("Enter the size of the array:");
		scanf("%d", &n);
		printf("Enter the array: \n");
		for(int i = 0; i < n; i++)
			scanf("%d", &a[i]);

		MPI_Send(&n, 1, MPI_INT, 1, 0, MPI_COMM_WORLD);

		for(int i = 0; i < n; i += 2)
			sum1 += a[i];
	}
	else{

	}

	MPI_Finaize();
	return 0;
}
