#include "mpi.h"
#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]){
	int rank, size, len;
	MPI_Status status;
	char *s = "HelLO";

	MPI_Init(&argc, &argv);
	MPI_Comm_rank(MPI_COMM_WORLD, &rank);
	MPI_Comm_size(MPI_COMM_WORLD, &size);

	if(rank == 0){
		//printf("Enter word:");
		//scanf("%s", s);

		printf("Word before sending: %s\n", s);

		//len = sizeof(s);
		len=strlen(s);
		len++;
		MPI_Ssend(&len, 1, MPI_INT, 1, 0, MPI_COMM_WORLD);
		MPI_Ssend(s, len, MPI_CHAR, 1, 1, MPI_COMM_WORLD);
		MPI_Recv(s, len, MPI_CHAR, 1, 2, MPI_COMM_WORLD, &status);

		printf("Word after receiving: %s", s);

		fflush(stdout);
	}
	else if(rank == 1){
		MPI_Recv(&len, 1, MPI_INT, 0, 0, MPI_COMM_WORLD, &status);
		MPI_Recv(s, len, MPI_CHAR, 0, 1, MPI_COMM_WORLD, &status);

		for(int i = 0; i < len; i++){
			if(s[i] >= 'A' && s[i] <= 'Z')
				s[i] += 'a' - 'A';
			else if(s[i] >= 'a' && s[i] <= 'z')
				s[i] += 'A' - 'a';
		}

		MPI_Ssend(s, len, MPI_CHAR, 0, 2, MPI_COMM_WORLD);
        fprintf(stdout,"length is %d",len);
		fflush(stdout);
	}

	MPI_Finalize();

	return 0;
}
