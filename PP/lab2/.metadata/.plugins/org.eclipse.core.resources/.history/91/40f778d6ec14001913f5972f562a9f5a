	MPI_Init(&argc, &argv);
	MPI_Comm_rank(MPI_COMM_WORLD, &rank);
	MPI_Comm_size(MPI_COMM_WORLD, &size);

	if(rank == 0){
		printf("Enter the size of the array:");
		scanf("%d", &n);

	}
	else{

	}

	MPI_Finaize();
	return 0;
}
